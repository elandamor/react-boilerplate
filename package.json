{
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "cd ./packages/react-scripts && node ./bin/react-scripts build",
    "changelog": "lerna-changelog",
    "compile:dependencies": "node tasks/compile-dependencies.js",
    "compile:lockfile": "node tasks/compile-lockfile.js",
    "deploy:gh-pages": "cd ./packages/gh-pages && npm run deploy",
    "generate": "cd ./packages/react-scripts && node ./bin/react-scripts generate",
    "publish": "tasks/publish.sh",
    "prettify": "prettier --config .prettierrc --write '**/template/**/*.{ts,tsx}'",
    "setup": "node tasks/setup.js",
    "start": "cd ./packages/react-scripts && node ./bin/react-scripts start",
    "storybook": "cd ./packages/react-scripts && npm run storybook",
    "start:gh-pages": "cd ./packages/gh-pages && npm run start",
    "start:prod": "cd ./packages/react-scripts && cross-env NODE_ENV=production node ./bin/react-scripts start",
    "test": "cd ./packages/react-scripts && node ./bin/react-scripts test"
  },
  "devDependencies": {
    "cross-env": "5.2.0",
    "eslint": "5.13.0",
    "eslint-config-airbnb": "17.1.0",
    "eslint-plugin-import": "2.16.0",
    "eslint-plugin-jsx-a11y": "6.2.1",
    "eslint-plugin-react": "7.12.4",
    "husky": "1.3.1",
    "jest": "24.0.0",
    "lerna": "3.10.8",
    "lerna-changelog": "0.8.2",
    "lint-staged": "8.1.3",
    "prettier": "1.16.4",
    "puppeteer": "1.12.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,md,css,html}": [
      "prettier --trailing-comma es5 --single-quote --write",
      "git add"
    ]
  }
}
