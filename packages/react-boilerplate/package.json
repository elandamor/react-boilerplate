{
  "name": "react-boilerplate",
  "version": "0.1.0",
  "description": "A highly scalable, offline-first foundation with the best developer experience and a focus on performance and best practices.",
  "repository": {
    "type": "git",
    "url": "git://github.com/elandamor/react-boilerplate.git"
  },
  "author": "Thandolwethu Mpofu",
  "license": "MIT",
  "scripts": {
    "build": "cross-env NODE_ENV=production webpack --config internals/webpack/webpack.prod.js && node internals/scripts/minifyServiceWorker.js",
    "build:dll": "cross-env NODE_ENV=development node internals/scripts/dependencies.js",
    "generate": "plop --plopfile internals/generators/index.js",
    "lint": "npm run lint:js",
    "lint:eslint": "eslint --ignore-path .gitignore --ignore-pattern 'internals/scripts'",
    "lint:js": "npm run lint:eslint -- .",
    "postinstall": "npm run build:dll",
    "precommit": "lint-staged",
    "pretest": "npm run lint",
    "start": "cross-env NODE_ENV=development node server",
    "start:prod": "cross-env NODE_ENV=production node server"
  },
  "dllPlugin": {
    "path": "node_modules/react-boilerplate-dlls",
    "exclude": [
      "chalk",
      "compression",
      "cross-env",
      "express",
      "ip",
      "minimist",
      "sanitize.css"
    ],
    "include": [
      "core-js",
      "lodash",
      "eventsource-polyfill"
    ]
  },
  "lint-staged": {
    "*.js": [
      "npm run lint:eslint",
      "git add"
    ]
  },
  "dependencies": {
    "babel-polyfill": "6.26.0",
    "classnames": "2.2.5",
    "fontfaceobserver": "2.0.13",
    "hoist-non-react-statics": "2.5.0",
    "intl": "1.2.5",
    "localforage": "1.7.1",
    "react": "16.3.1",
    "react-dom": "16.3.1",
    "react-helmet": "5.2.0",
    "react-loadable": "5.3.1",
    "react-router-dom": "4.2.2",
    "react-transition-group": "2.3.0",
    "sanitize.css": "5.0.0",
    "styled-components": "3.2.5",
    "whatwg-fetch": "2.0.4"
  },
  "devDependencies": {
    "@types/react": "16.3.4",
    "@types/react-dom": "16.0.4",
    "@types/webpack-env": "1.13.5",
    "add-asset-html-webpack-plugin": "2.1.3",
    "babel-cli": "6.26.0",
    "babel-core": "6.26.0",
    "babel-eslint": "8.2.2",
    "babel-loader": "7.1.4",
    "babel-plugin-dynamic-import-node": "1.2.0",
    "babel-plugin-react-transform": "3.0.0",
    "babel-plugin-styled-components": "1.5.1",
    "babel-plugin-transform-es2015-modules-commonjs": "6.26.0",
    "babel-plugin-transform-react-constant-elements": "6.23.0",
    "babel-plugin-transform-react-inline-elements": "6.22.0",
    "babel-preset-env": "1.6.1",
    "babel-preset-react": "6.24.1",
    "babel-preset-stage-0": "6.24.1",
    "chalk": "2.3.2",
    "circular-dependency-plugin": "5.0.1",
    "clean-webpack-plugin": "0.1.19",
    "compression": "1.7.2",
    "cross-env": "5.1.4",
    "css-loader": "0.28.11",
    "dotenv-webpack": "1.5.5",
    "eslint": "4.19.1",
    "eslint-config-airbnb": "16.1.0",
    "eslint-import-resolver-webpack": "0.9.0",
    "eslint-plugin-import": "2.10.0",
    "eslint-plugin-jsx-a11y": "6.0.3",
    "eslint-plugin-react": "7.7.0",
    "eventsource-polyfill": "0.9.6",
    "exports-loader": "0.7.0",
    "express": "4.16.3",
    "file-loader": "1.1.11",
    "fork-ts-checker-webpack-plugin": "0.4.1",
    "glob": "7.1.2",
    "html-loader": "0.5.5",
    "html-webpack-plugin": "3.2.0",
    "husky": "0.14.3",
    "image-webpack-loader": "4.2.0",
    "ip": "1.1.5",
    "json-loader": "0.5.7",
    "lint-staged": "7.0.4",
    "lodash": "4.17.5",
    "minimist": "1.2.0",
    "ngrok": "3.0.1",
    "node-plop": "0.13.0",
    "offline-plugin": "4.9.0",
    "plop": "2.0.0",
    "style-loader": "0.20.3",
    "ts-loader": "4.1.0",
    "tslint": "5.9.1",
    "typescript": "2.8.1",
    "uglify-js": "3.3.18",
    "url-loader": "1.0.1",
    "webpack": "4.5.0",
    "webpack-bundle-analyzer": "2.11.1",
    "webpack-cli": "2.0.14",
    "webpack-dev-middleware": "3.1.2",
    "webpack-hot-middleware": "2.21.2"
  }
}
